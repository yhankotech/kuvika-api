// schema.prisma
model Worker {
  id              String   @id @default(uuid())
  fullName        String
  email           String   @unique
  password        String
  phoneNumber     String
  serviceTypes    String[] // lista de serviços
  location        String
  availability    String   // JSON ou texto com horários/dias
  createdAt       DateTime @default(now())
}
